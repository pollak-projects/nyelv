model user {
  id                    String         @id @default(uuid())
  username              String         @unique
  first_name            String
  last_name             String
  birth_date            DateTime
  email                 String         @unique
  password              String
  created_at            DateTime
  updated_at            DateTime
  user_level            String         @default("beginner")
  user_current_progress Int            @default(0)
  isAdmin               Int            @default(0)
  chatMessages          chatMessages[]
}
